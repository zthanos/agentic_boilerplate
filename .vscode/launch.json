{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "mix_task",
            "name": "Phoenix Server (Debug)",
            "request": "launch",
            "task": "phx.server",
            "projectDir": "${workspaceRoot}/apps/agent_web",
            "env": {
                "MIX_ENV": "dev"
            }
        },
        {
            "type": "mix_task",
            "name": "Phoenix Server from Root (Debug)",
            "request": "launch",
            "task": "phx.server",
            "taskArgs": [],
            "projectDir": "${workspaceRoot}",
            "env": {
                "MIX_ENV": "dev"
            },
            "preLaunchTask": null
        },
        {
            "type": "mix_task",
            "name": "IEx Interactive (Debug)",
            "request": "launch",
            "task": "run",
            "taskArgs": [
                "--no-halt"
            ],
            "projectDir": "${workspaceRoot}",
            "env": {
                "MIX_ENV": "dev"
            }
        },
        {
            "type": "mix_task",
            "request": "launch",
            "name": "mix task",
            "task": "task",
            "taskArgs": [],
            "projectDir": "${workspaceRoot}"
        },
        {
            "type": "mix_task",
            "name": "mix (Default task)",
            "request": "launch",
            "projectDir": "${workspaceRoot}"
        },
        {
            "type": "mix_task",
            "name": "mix test",
            "request": "launch",
            "task": "test",
            "taskArgs": [
                "--trace"
            ],
            "startApps": true,
            "projectDir": "${workspaceRoot}",
            "requireFiles": [
                "test/**/test_helper.exs",
                "test/**/*_test.exs"
            ]
        }
    ]
}